<script>
  $( "#delete-post" ).on( "submit", function(e) { 
    e.preventDefault();
    $(function () {
    const post_id = document.getElementById("p_s").value
    $.ajax({
      type: "DELETE",
      url: `/api/v1/remove-post?post_id=${post_id}`,
    //   data: payload,
      error: function(XMLHttpRequest, textStatus, errorThrown) {
        document.getElementById("err").innerHTML = XMLHttpRequest.responseJSON.message;
      },
      success: function (response) {
        // console.log(response.data.authorization_url)
        setTimeout(() => {
            window.location = "/api/v1/all-posts";
        }, 2000);
      }
    });
  });
});

  $( "#comment" ).on( "submit", function(e) { 
    e.preventDefault();
    const payload = {
      "body": $('#body').val(),
    };
    $(function () {
    const post_id = document.getElementById("p_s").value
    $.ajax({
      type: "POST",
      url: `/api/v1/post/${post_id}/comment`,
      data: payload,
      error: function(XMLHttpRequest, textStatus, errorThrown) {
        document.getElementById("err").innerHTML = "Cannot Post Comment Now, Please Try Again Later...";
      },
      success: function (response) {
        const userLoggedIn = document.getElementById("comment_div");
        if(userLoggedIn){
        const newComment = document.getElementById("body");
        const commentCount = document.getElementById("comment-count");
        const ul = document.getElementById("comment-list");
        // const firstToComment = document.getElementById("no-comment");
        // console.log(firstToComment.textContent);
        const comment = `
                        <li class="comment">
                  <div class="vcard bio">
                    <img src="images/person_1.jpg" alt="Image placeholder">
                  </div>
                  <div class="comment-body">
                    <h3>You</h3>
                    <div class="meta">${new Date().toLocaleString()}</div>
                    <p>${newComment.value}</p>
                  </div>
                </li>
        `
        let count = Number(commentCount.textContent.split(" ")[0])
        ul.innerHTML += comment;
        commentCount.innerHTML = `${count+1} Comment(s)`
        newComment.value = "";
          }
      }
    });
  });
});
</script>

