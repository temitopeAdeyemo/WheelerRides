  <script>
    $("#year").datepicker({
    format: "yyyy",
    viewMode: "years", 
    minViewMode: "years",
    autoclose:true //to close picker once year is selected
});

$(document).ready(function (e) {
    document.getElementById("add-car").addEventListener("keypress",()=>{
      document.getElementById("err").innerHTML = "";       
    });
 $("#add-car").on('submit',(function(e) {
  e.preventDefault();
  document.getElementById("transmissionInput").value = $('#transmission').val();
  document.getElementById("fuelTypeInput").value = $('#fuelType').val();
  document.getElementById("seatInput").value = $('#seat').val();    

  $.ajax({
         url: "/api/v1/car/post",
   type: "POST",
   data:  new FormData(this),
   contentType: false,
         cache: false,
   processData:false,
   beforeSend : function()
   {
    $("#err").fadeOut();
   },

   success: function(data, response)
      {
    if(data=='invalid')
    {
     $("#err").html("Invalid File !").fadeIn();
    }
    else
    {
     $("#add-car")[0].reset(); 
    }
      },
     error: function(e, XMLHttpRequest, textStatus, errorThrown) 
      {
    $("#err").html(e).fadeIn();
      }          
    });
 }));
});
