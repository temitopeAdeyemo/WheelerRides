  <script>
$(document).ready(function (e) {
    document.getElementById("add-post").addEventListener("keypress",()=>{
    document.getElementById("success").innerHTML = "";
    document.getElementById("err").innerHTML = "";       
    })
 $("#add-post").on('submit',(function(e) {
  e.preventDefault();

  $.ajax({
         url: "/api/v1/post/upload",
   type: "POST",
   data:  new FormData(this),
   contentType: false,
         cache: false,
   processData:false,

   success: function(data, response)
      {
    document.getElementById("success").innerHTML = "Your Post Has been uploaded"; 
     $("#add-post")[0].reset();
      },
     error: function(XMLHttpRequest, textStatus, errorThrown) 
      {
        document.getElementById("err").innerHTML = XMLHttpRequest.responseJSON.message;
      }          
    });
 }));
});
