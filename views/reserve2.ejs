<script>
    document.getElementById("reserve").addEventListener("keypress",()=>{
      document.getElementById("err").innerHTML = "";       
    });
  $( "form" ).on( "submit", function(e) { 
    e.preventDefault();
    $(function () {
      const payload = {
        "deliveryType": $('#pick_up_location').val(),
        "pickUpDate": $('#book_pick_date').val(),
        "returnDate": $('#book_off_date').val(),
      };
    const bookingUrl = document.getElementById("bookingUrl").value;
    console.log(bookingUrl)
    $.ajax({
      type: "POST",
      url: bookingUrl,
      data: payload,
      error: function(XMLHttpRequest, textStatus, errorThrown) {
        document.getElementById("err").innerHTML = XMLHttpRequest.responseJSON.message;
      },
      success: function (response) {
        document.getElementById("success").innerHTML = "Your booking has been made sucessfully";        
        setTimeout(() => {
            window.location = "/payment";
        }, 2000);
      }
    });
  });
});
